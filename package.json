{
    "name": "intlextractor",
    "displayName": "IntlExtractor",
    "description": "Extracts text selection to a message object compatible with react-intl message objects.",
    "version": "0.0.1",
    "publisher": "slowbackspace",
    "engines": {
        "vscode": "^1.40.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.extractMessage"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.extractMessage",
                "title": "Extract l10n message"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.extractMessage",
                    "group": "1_modification",
                    "when": "editorHasSelection"
                }
            ]
        },
        "configuration": {
            "title": "IntlExtractor",
            "properties": {
                "intlExtractor.messagesFilePath": {
                    "type": "string",
                    "scope": "resource"
                },
                "intlExtractor.messageComponent": {
                    "type": "string",
                    "default": "FormattedMessage",
                    "scope": "window"
                },
                "intlExtractor.ignoreTokens": {
                    "type": "array",
                    "default": [
                        "a",
                        "an",
                        "the",
                        ".",
                        ","
                    ],
                    "scope": "resource"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.40.0",
        "glob": "^7.1.5",
        "mocha": "^6.2.2",
        "typescript": "^3.6.4",
        "tslint": "^5.20.0",
        "vscode-test": "^1.2.2"
    }
}
